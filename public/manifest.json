{
  "manifest_version": 3,
  "name": "Run Okami ",
  "description": "Runs okami work finder",
  "version": "1.0",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://okami.daviribeiro.com/*",
        "http://localhost:5173/*"
      ],
      "js": ["token-script.js"],
      "all_frames": true
    }
  ]

}